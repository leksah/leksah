                    <keyword>transient</keyword>
                    <keyword>volatile</keyword>
                </context>

            </include>
        </context>

        <context id="jmacro" class="no-spell-check">
            <include>
                <context ref="haskell-embed"/>
                <context ref="jmacro-base"/>
            </include>
        </context>

        <context id="j" class="no-spell-check">
            <include>
                <context ref="short-haskell-embed"/>
                <context ref="jmacro-base"/>
            </include>
        </context>

    </definitions>
</language>
